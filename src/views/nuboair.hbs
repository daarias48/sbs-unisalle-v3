        <div class="graph">
            <div class="comBox-container">
                <select name="measures" class="select-measures">
                    <option selected>Escoja una opción</option>
                    <option value="0">PM <sub>1</sub> </option>
                    <option value="1">PM <sub>2.5</sub> </option>
                    <option value="2">Presión atmosférica</option>
                    <option value="3">Temperatura ambiente</option>
                    <option value="4">RH ambiente</option>
                </select>
            </div>
            <canvas id="myChartModulair"></canvas>
        </div>
    </div>

