<div class="Data_Download">
    <div class="graph_and_data">
        <div class="data">
            <div class="data_data1">
                <h6>PM<sub>1</sub></h6>
                <h6 id="pm10">-</h6>
            </div>
            <div class="data_data1">
                <h6>PM<sub>2.5</sub></h6>
                <h6 id="pm25">-</h6>
            </div>

            <div class="data_data1">
                <h6>Temperatura ambiente</h6>
                <h6 id="temp">-</h6>
            </div>
